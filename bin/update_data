#!/usr/bin/env ruby
require 'dotenv'
Dotenv.load

require 'httparty'
require 'zip'
require 'nokogiri'

base_api = 'http://thetvdb.com/api/' + ENV['THETVDB_APIKEY']

zipfile = Tempfile.new('showdates_shows')
zipfile.binmode # This might not be necessary depending on the zip file
zipfile.write(HTTParty.get(base_api + '/updates/updates_week.zip').body)
zipfile.close

Zip::File.open(zipfile.path) do |file|
  updates = Nokogiri::XML(file.read(file.find_entry('updates_week.xml')))

  num = 0
  updates.xpath('/Data/Series').each do |serie|
    # TODO: create series update job for show with tvdbid `serie.at_xpath('id').content`
    # The update was made on `serie.at_xpath('time').content`
    num = num + 1
  end

  puts "Total: " + num.to_s + " shows scheduled for update"
end
